@{
    ViewData["Title"] = "Employee Editor";
}

@model Employee

<div class="row justify-content-center">
    <div class="col-3 text-center my-auto">
        <a class="btn btn-outline-danger buttonload" asp-area="" asp-controller="Home" asp-action="EmployeeManager">Back</a>
    </div>
    <div class="col-auto"></div>
    <div class="col-4 text-center">
        <hr />
        <h2>Employee Editor</h2>
        <hr />
        @if (!string.IsNullOrEmpty((string)TempData.Peek("Error")))
        {
            <p class="text-danger">@TempData["Error"].ToString()</p>
        }
    </div>
    <div class="col-auto"></div>
    <div class="col-3 text-center my-auto">

    </div>
</div>

<ul class="nav nav-tabs justify-content-center" id="EmployeeEditorTabs" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="gen-info-tab" data-toggle="tab" href="#GenInfo" role="tab" aria-controls="GeneralInformation" aria-selected="true">General Info</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="training-tab" data-toggle="tab" href="#Trainings" role="tab" aria-controls="TrainingDetails" aria-selected="false">Training Details</a>
    </li>
</ul>
<br />
<br />

<div class="tab-content" id="EmployeeEditorContent">
    <div class="tab-pane fade show active" id="GenInfo" role="tabpanel" aria-labelledby="gen-info-tab">
        @using (Html.BeginForm("EmployeeSaver", "TrainingInsights", FormMethod.Post))
        {
            @Html.HiddenFor(obj => obj.EmployeeID)
            @Html.HiddenFor(obj => obj.CreatedDate)
            @Html.HiddenFor(obj => obj.LastModifiedDate)
            @Html.HiddenFor(obj => obj.CreatedByName)
            @Html.HiddenFor(obj => obj.LastModifiedByName)
            <div class="row justify-content-center">
                <div class="col-sm-3 col-10 text-center rounded border">
                    <div class="my-3">
                        <b>First Name</b>
                        <hr />
                        @Html.EditorFor(obj => obj.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="col-sm-auto col-12">
                    <br />
                </div>
                <div class="col-sm-3 col-10 text-center rounded border">
                    <div class="my-3">
                        <b>Last Name</b>
                        <hr />
                        @Html.EditorFor(obj => obj.LastName, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="col-sm-auto col-12">
                    <br />
                </div>
                <div class="col-sm-3 col-10 text-center rounded border">
                    <div class="my-3">
                        <b>Active?</b>
                        <hr />
                        @Html.CheckBoxFor(obj => obj.Active)
                    </div>
                </div>
            </div>
            <br />
            <div class="row justify-content-center">
                <div class="col-sm-3 col-10 text-center rounded border">
                    <div class="my-3">
                        <b>Shift</b>
                        <hr />
                        @Html.DropDownListFor(obj => obj.Shift.ShiftID, Model.ShiftList, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-sm-auto col-12">
                    <br />
                </div>
                <div class="col-sm-3 col-10 text-center rounded border">
                    <div class="my-3">
                        <b>Department</b>
                        <hr />
                        @Html.DropDownListFor(obj => obj.Department.DepartmentID, Model.DeptList, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-sm-auto col-12">
                    <br />
                </div>
                <div class="col-sm-3 col-10 text-center rounded border">
                    <div class="my-3">
                        <b>Building</b>
                        <hr />
                        @Html.DropDownListFor(obj => obj.Building.BuildingID, Model.BuildingList, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <br />
            <div class="row justify-content-center">
                <div class="col-sm-5 col-10 text-center rounded border">
                    <div class="my-3">
                        <b>Hire Date</b>
                        <hr />
                        @Html.EditorFor(obj => obj.HireDate, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="col-sm-auto col-12">
                    <br />
                </div>
                <div class="col-sm-5 col-10 text-center rounded border">
                    <div class="my-3">
                        <b>Transfer Date</b>
                        <hr />
                        @Html.EditorFor(obj => obj.TransferDate, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
            </div>
            <br />
            <div class="row justify-content-center">
                <div class="col-sm-5 col-10 text-center rounded border">
                    <div class="my-3">
                        <b>Manager?</b>
                        <hr />
                        @Html.CheckBoxFor(obj => obj.Manager)
                    </div>
                </div>
            </div>
            <hr />
            <div class="row justify-content-center">
                <div class="col text-center">
                    <button class="btn btn-outline-success">Save Changes</button>
                </div>
            </div>
        }
    </div>
    <div class="tab-pane fade" id="Trainings" role="tabpanel" aria-labelledby="training-tab">
        @using (Html.BeginForm("", "", FormMethod.Post))
        {

        }
        <h1>IN DEVELOPMENT</h1>
    </div>
</div>