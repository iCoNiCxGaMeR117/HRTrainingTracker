@{
    ViewData["Title"] = "Employee Manager";
}

@model IList<HRTrainingTracker.Entities.Models.Employee>

<div class="row justify-content-center">
    <div class="col-3 text-center my-auto">
        <a class="btn btn-primary" asp-area="" asp-controller="TrainingInsights" asp-action="EmployeeManagerAddNew">Add New</a>
    </div>
    <div class="col-auto"></div>
    <div class="col-4 text-center">
        <hr />
        <h2>Employee Manager</h2>
        <hr />
        @if (!string.IsNullOrEmpty((string)TempData.Peek("Error")))
        {
            <p class="text-danger">@TempData["Error"].ToString()</p>
        }
    </div>
    <div class="col-auto"></div>
    <div class="col-3">

    </div>
</div>
<hr />
@if (Model != null)
{
    @if (Model.Count == 0)
    {
        <div class="row justify-content-center">
            <div class="col-6 text-center">
                <hr />
                No Items Found!
                <br />
                To add items, click the "Add New" button above!
                <hr />
            </div>
        </div>
    }
    else
    {
        <div class="row justify-content-center">
            <div class="col-12 text-center table-responsive">
                <table class="table CustomDataTable table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Shift</th>
                            <th>Hire Date</th>
                            <th>Transfer Date</th>
                            <th>Building</th>
                            <th>Department</th>
                            <th>Active</th>
                            <th>Manager</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (var i = 0; i < Model.Count; i++)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(obj => obj.ElementAt(i).EmployeeID)
                                </td>
                                <td>
                                    @Html.DisplayFor(obj => obj.ElementAt(i).FirstName)
                                </td>
                                <td>
                                    @Html.DisplayFor(obj => obj.ElementAt(i).LastName)
                                </td>
                                <td>
                                    @Html.DisplayFor(obj => obj.ElementAt(i).Shift.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(obj => obj.ElementAt(i).HireDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(obj => obj.ElementAt(i).TransferDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(obj => obj.ElementAt(i).Building.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(obj => obj.ElementAt(i).Department.Name)
                                </td>
                                <td>
                                    @if (Model.ElementAt(i).Active)
                                    {
                                        <span class="badge badge-pill badge-success">Yes</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-pill badge-danger">No</span>
                                    }
                                </td>
                                <td>
                                    @if (Model.ElementAt(i).Manager)
                                    {
                                        <span class="badge badge-pill badge-success">Yes</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-pill badge-danger">No</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
}