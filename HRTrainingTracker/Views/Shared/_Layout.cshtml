<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HRTrainingTracker</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <link rel="stylesheet" href="~/lib/AddonLibraries/summernote-0.8.18-dist/summernote-bs4.min.css" />
    <link rel="stylesheet" href="~/lib/AddonLibraries/DataTables/datatables.min.css" />

    <script src="~/lib/AddonLibraries/summernote-0.8.18-dist/summernote-bs4.min.js"></script>
    <script src="~/lib/AddonLibraries/DataTables/datatables.min.js"></script>

    <link rel="stylesheet" href="~/lib/AddonLibraries/DataTables/Buttons-2.0.0/css/buttons.bootstrap4.min.css" />
    <link rel="stylesheet" href="~/lib/AddonLibraries/DataTables/ColReorder-1.5.4/css/colReorder.bootstrap4.min.css" />
    <link rel="stylesheet" href="~/lib/AddonLibraries/DataTables/DateTime-1.1.1/css/dataTables.dateTime.min.css" />
    <link rel="stylesheet" href="~/lib/AddonLibraries/DataTables/FixedColumns-3.3.3/css/fixedColumns.bootstrap4.min.css" />
    <link rel="stylesheet" href="~/lib/AddonLibraries/DataTables/FixedHeader-3.1.9/css/fixedHeader.bootstrap4.min.css" />
    <link rel="stylesheet" href="~/lib/AddonLibraries/DataTables/KeyTable-2.6.4/css/keyTable.bootstrap4.min.css" />
    <link rel="stylesheet" href="~/lib/AddonLibraries/DataTables/Responsive-2.2.9/css/responsive.bootstrap4.min.css" />
    <link rel="stylesheet" href="~/lib/AddonLibraries/DataTables/RowGroup-1.1.3/css/rowGroup.bootstrap4.min.css" />
    <link rel="stylesheet" href="~/lib/AddonLibraries/DataTables/RowReorder-1.2.8/css/rowReorder.bootstrap4.min.css" />
    <link rel="stylesheet" href="~/lib/AddonLibraries/DataTables/SearchBuilder-1.2.1/css/searchBuilder.bootstrap4.min.css" />

    <script src="~/lib/AddonLibraries/DataTables/Buttons-2.0.0/js/buttons.bootstrap4.min.js"></script>
    <script src="~/lib/AddonLibraries/DataTables/ColReorder-1.5.4/js/colReorder.bootstrap4.min.js"></script>
    <script src="~/lib/AddonLibraries/DataTables/DateTime-1.1.1/js/dataTables.dateTime.min.js"></script>
    <script src="~/lib/AddonLibraries/DataTables/FixedColumns-3.3.3/js/fixedColumns.bootstrap4.min.js"></script>
    <script src="~/lib/AddonLibraries/DataTables/FixedHeader-3.1.9/js/fixedHeader.bootstrap4.min.js"></script>
    <script src="~/lib/AddonLibraries/DataTables/JSZip-2.5.0/jszip.min.js"></script>
    <script src="~/lib/AddonLibraries/DataTables/KeyTable-2.6.4/js/keyTable.bootstrap4.min.js"></script>
    <script src="~/lib/AddonLibraries/DataTables/pdfmake-0.1.36/pdfmake.min.js"></script>
    <script src="~/lib/AddonLibraries/DataTables/Responsive-2.2.9/js/responsive.bootstrap4.min.js"></script>
    <script src="~/lib/AddonLibraries/DataTables/RowGroup-1.1.3/js/rowGroup.bootstrap4.min.js"></script>
    <script src="~/lib/AddonLibraries/DataTables/RowReorder-1.2.8/js/rowReorder.bootstrap4.min.js"></script>
    <script src="~/lib/AddonLibraries/DataTables/SearchBuilder-1.2.1/js/searchBuilder.bootstrap4.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Training Manager</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="EmployeeManager">Employee Manager</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="TrainingManager">Training Manager</a>
                        </li>
                    </ul>
                    <p class="nav navbar-text">Hello, @User.Identity.Name.Split('\\')[1]!</p>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <div id="Loading" style="display: none">
                <div class="row justify-content-center">
                    <div class="col-auto">
                        <div class="spinner-border" role="status">
                            <span class="sr-only">Loading...</span>
                        </div>
                    </div>
                </div>
            </div>
            <div id="PageBody">
                @RenderBody()
            </div>
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Today.Year - HRTrainingTracker - Boge - Designed By: Johnny Kinslow
        </div>
    </footer>
</body>
</html>
